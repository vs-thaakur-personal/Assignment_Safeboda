<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/spacing_x">

    <LinearLayout
        android:id="@+id/userDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_800"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/spacing_3x"
        tools:context=".ui.detail.UserDetailActivity">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageIv"
            android:layout_width="200dp"
            android:layout_height="200dp"
            tools:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_100"
            android:textSize="32sp"
            tools:text="Vivek Singh" />

        <TextView
            android:id="@+id/userNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_x"
            android:textColor="@color/grey_200"
            android:textSize="28sp"
            tools:text="Viceboyz" />

        <TextView
            android:id="@+id/locationTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_x"
            android:textColor="@color/grey_200"
            android:textSize="20sp"
            tools:text="Viceboyz" />

        <TextView
            android:id="@+id/gistInfoTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_x"
            android:textColor="@color/grey_200"
            android:textSize="20sp"
            tools:text="Viceboyz" />

        <TextView
            android:id="@+id/followerTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_x"
            android:layout_marginTop="@dimen/spacing_2x"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:paddingStart="@dimen/spacing_3x"
            android:paddingTop="@dimen/spacing_x"
            android:paddingEnd="@dimen/spacing_3x"
            android:paddingBottom="@dimen/spacing_x"
            android:textSize="20sp"
            app:drawableEndCompat="@drawable/ic_arrow_forward"
            tools:text="Viceboyz" />

        <TextView
            android:id="@+id/followingTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_x"
            android:layout_marginTop="@dimen/spacing_2x"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:paddingStart="@dimen/spacing_3x"
            android:paddingTop="@dimen/spacing_x"
            android:paddingEnd="@dimen/spacing_3x"
            android:paddingBottom="@dimen/spacing_x"
            android:textSize="20sp"
            app:drawableEndCompat="@drawable/ic_arrow_forward"
            tools:text="Viceboyz" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />
</FrameLayout>